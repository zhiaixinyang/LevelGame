<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <TextView
        android:id="@+id/btn_re_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_setting_normal_margin"
        android:background="@drawable/ic_bg_re_start_item"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/string_re_start"
        android:textColor="@color/white"
        android:textSize="@dimen/item_setting_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_setting_normal_margin"
        android:background="@drawable/ic_bg_hero_attr"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/string_game_help"
        android:textColor="@color/white"
        android:textSize="@dimen/item_setting_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_re_start" />

    <TextView
        android:id="@+id/btn_update_mes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_setting_normal_margin"
        android:background="@drawable/ic_bg_hero_attr"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/string_update_mes"
        android:textColor="@color/white"
        android:textSize="@dimen/item_setting_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_help" />

    <TextView
        android:id="@+id/btn_feed_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_setting_normal_margin"
        android:background="@drawable/ic_bg_hero_attr"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/string_feed_back"
        android:textColor="@color/white"
        android:textSize="@dimen/item_setting_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update_mes" />

    <RelativeLayout
        android:id="@+id/layout_big_monster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_setting_normal_margin"
        android:background="@drawable/bg_white_round"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_feed_back">

        <com.mdove.levelgame.view.base.MDoveTextView
            android:id="@+id/tv_big_monster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_alignParentLeft="true"
            android:text="@string/string_setting_big_monsters"
            android:textSize="@dimen/item_setting_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/toggle_switch_big_monster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:theme="@style/Switch" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>