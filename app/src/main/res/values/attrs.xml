<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalSmoothProgressBar">
        <attr name="hspForegroundProgressColor" format="color" />
        <attr name="hspBackgroundProgressColor" format="color" />
    </declare-styleable>

    <!-- 跑马灯 -->
    <declare-styleable name="MarqueeView">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BlinkSlideView">
        <attr name="auto_start" format="boolean|reference"/>
        <attr name="repeat" format="integer|reference"/>
        <attr name="round" format="dimension|reference"/>
        <attr name="round_top_left" format="dimension|reference"/>
        <attr name="round_top_right" format="dimension|reference"/>
        <attr name="round_bottom_left" format="dimension|reference"/>
        <attr name="round_bottom_right" format="dimension|reference"/>
    </declare-styleable>

</resources>